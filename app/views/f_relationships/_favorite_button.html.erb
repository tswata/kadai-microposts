<% if current_user.isfavorite?(micropost) %>
  <%= form_for(current_user.f_relationships.find_by(micropost_id: micropost.id), html: {method: :delete}) do |f| %>
    <%= hidden_field_tag :micropost_id, micropost.id %> 
    <%= f.submit "Cancel", class: "btn btn-warning btn-xs" %>
  <% end %>
<% else %>
  <%= form_for(current_user.f_relationships.build) do |f| %>
    <%= hidden_field_tag :micropost_id, micropost.id %>
    <%= f.submit "Favorite", class: "btn btn-primary btn-xs" %>
  <% end %>
<% end %>
   
     